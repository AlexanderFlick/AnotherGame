@page "/gather"
@using Game.Data.Models
@rendermode InteractiveServer
@inject NewGame Game

<div class="gather-page">
	<div class="header">
		<h3>Chest Storage: @Game.Player.Chest.Resources.Count/@Game.Player.Chest.ResourceCap</h3>
	</div>

	<div class="carousel">
		@foreach (var availableResource in Game.Player.Resources)
		{
			<ResourceGatheringComponent Resource="availableResource" />
		}
	</div>
</div>

<style>
	.gather-page {
		background: linear-gradient(135deg, #6dabe4, #fff);
		min-height: 100vh;
		padding: 20px;
		text-align: center;
	}

	.header h3 {
		font-size: 1.5rem;
		font-weight: bold;
		color: #333;
		margin-bottom: 20px;
	}

	.carousel {
		display: flex;
		justify-content: center;
		gap: 20px;
		flex-wrap: wrap; /* Responsive layout */
	}
</style>

@code {
	protected override void OnInitialized()
	{
		Game.OnStateChanged = StateHasChanged;
	}
}
